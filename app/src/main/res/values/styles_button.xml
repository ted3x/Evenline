<resources>

    <style name="Button_Primary" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">@dimen/dimen_p_56</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">@font/noto_sans_jp_extra_bold</item>
        <item name="android:textSize">@dimen/dimen_sp_12</item>
        <item name="cornerRadius">@dimen/dimen_p_16</item>
        <item name="backgroundTint">@color/color_primary_base</item>
    </style>

    <style name="Button_Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/dimen_p_56</item>
        <item name="android:textColor">@color/color_primary_base</item>
        <item name="android:fontFamily">@font/noto_sans_jp_extra_bold</item>
        <item name="android:textSize">@dimen/dimen_sp_12</item>
        <item name="cornerRadius">@dimen/dimen_p_16</item>
        <item name="strokeColor">@color/color_primary_base</item>
    </style>

    <style name="Button_Social" parent="Button_Secondary">
        <item name="android:textColor">@color/color_grayscale_900</item>
        <item name="android:fontFamily">@font/noto_sans_jp_medium</item>
        <item name="strokeColor">@color/color_grayscale_200</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="Button_AppBar_Action" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="android:layout_width">@dimen/dimen_p_40</item>
        <item name="android:layout_height">@dimen/dimen_p_40</item>
        <item name="android:backgroundTint">@color/color_white</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">center</item>
        <item name="iconTint">@color/color_grayscale_900</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">@dimen/dimen_p_10</item>
    </style>
</resources>