<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Evenline" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary_base</item>
        <item name="colorPrimaryVariant">@color/color_primary_300</item>
        <item name="colorOnPrimary">@color/color_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary_base</item>
        <item name="colorSecondaryVariant">@color/color_secondary_300</item>
        <item name="colorOnSecondary">@color/color_primary_base</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="appBarActionButtonStyle">@style/Button_AppBar_Action</item>
    </style>
</resources>